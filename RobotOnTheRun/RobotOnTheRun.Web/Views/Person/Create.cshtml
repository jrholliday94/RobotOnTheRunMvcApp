@model RobotOnTheRun.Web.Models.CreatePersonModel
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <script src="~/Scripts/ROTR/person.js" type="text/javascript"></script>

    <title>Homepage</title>
</head>
<body>
    <h2>Create Profile</h2>
    <div>
        <form>
            <div class="col-sm-5">
                @Html.LabelFor(model => model.FirstName)
            </div>
            <div class="col-sm-8">
                @Html.EditorFor(model => model.FirstName)
            </div>
            <br />
            <div class="col-sm-5">
                @Html.LabelFor(model => model.LastName)
            </div>
            <div class="col-sm-8">
                @Html.EditorFor(model => model.LastName)
            </div>
            <br />
            <div class="col-sm-5">
                @Html.LabelFor(model => model.Gender)
            </div>
            <div class="col-sm-8">
                @Html.EditorFor(model => model.Gender)
            </div>
            <br />
            <div class="col-sm-5">
                @Html.LabelFor(model => model.Email)
            </div>
            <div class="col-sm-8">
                @Html.EditorFor(model => model.Email)
            </div>
            <br />
            <div class="col-sm-5">
                @Html.LabelFor(model => model.PhoneNumber)
            </div>
            <div class="col-sm-8">
                @Html.EditorFor(model => model.PhoneNumber)
            </div>

            <div class="col-sm-5"  style="padding-top: 15px;">
                <button class="btn btn-secondary" onclick="submit">Save</button>
            </div>
            <br />
        </form>
    </div>
</body>
</html>
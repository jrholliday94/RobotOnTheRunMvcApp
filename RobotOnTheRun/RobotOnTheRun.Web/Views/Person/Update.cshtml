@model RobotOnTheRun.Web.Models.UpdatePersonModel
<script src="~/Scripts/ROTR/person.js" type="text/javascript"></script>
<h2>Profile Page</h2>
    

<script>
    var search = "@Request.RequestContext.HttpContext.Session["userId"]";
    SearchPerson(search);
</script>

<div id="createProfile">
    <p id="createProfile"> You have never updated your profile with information click here to do so!</p>
    @Html.ActionLink("[Update your profile]", "Create")
</div>


<input id="personId" type="hidden">
<form name="personForm" onsubmit="UpdatePerson(search)" id="personForm">
    <p>First Name: <input id="firstName" type="text" required></p>
    <p>Last Name: <input id="lastName" type="text" required></p>
    <p>
        Gender:
        <select class="form-control small" id="gender" name="gender">
            <option>Select Gender</option>
            <option>Male</option>
            <option>Female</option>
            <option>Other</option>
        </select>
    </p>
    <p>Email: <input id="email" type="email" required></p>
    <p>Phone Number: <input id="phoneNumber" type="text"></p>
    <input type="submit" value="Save">
</form>

<div id="successMessage" class="hidden alert alert-success">
    Successfully Updated!
</div>
<div id="errorMessage" class="hidden alert alert-danger">
    Error Occurred!
</div>
